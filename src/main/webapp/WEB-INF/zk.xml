<?xml version="1.0" encoding="UTF-8"?>
<zk>
    <system-config>
        <debug-js>true</debug-js>
        <update-uri>/zkau</update-uri>
        <keep-view-namespace>true</keep-view-namespace>
    </system-config>

    <library-property>
        <name>org.zkoss.zk.ui.debug</name>
        <value>true</value>
    </library-property>

    <!-- Disable caching for development -->
    <library-property>
        <name>org.zkoss.zk.WPD.cache</name>
        <value>false</value>
    </library-property>
    <library-property>
        <name>org.zkoss.zk.WCS.cache</name>
        <value>false</value>
    </library-property>
</zk>
